---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
---

<Layout title="Welcome to Astro.">
	<main>
		<h1>Welcome to my <span class="text-gradient">playground</span></h1>
		<p class="instructions">
			This is where i experiment and explore the world wide web. 
		</p>
		<ul role="list" class="link-card-grid">
			<Card
				href="https://docs.astro.build/"
				title="HTML/CSS/JS"
				body="Here you will find basic HTMl, CSS and JS projects. Going back to the basics"
			/>
			<Card
				href="https://astro.build/integrations/"
				title="React"
				body="Go to a look at my react projects"
			/>
			<Card
				href="https://astro.build/themes/"
				title="Vue"
				body="I have no idea"
			/>
			<Card
				href="https://astro.build/chat/"
				title="Contact"
				body="Suggestions are welcome"
			/>
		</ul>
	</main>
</Layout>
